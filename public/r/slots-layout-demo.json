{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "slots-layout-demo",
  "type": "registry:block",
  "files": [
    {
      "path": "registry/blocks/slots-layout-demo.tsx",
      "content": "\"use client\"\n\nimport React from \"react\"\nimport { Bell, ChevronLeft, Home, LayoutGrid, Menu, Search, Settings, User } from \"lucide-react\"\n\nimport { Button } from \"@/components/ui/button\"\nimport { Input } from \"@/components/ui/input\"\nimport { BottomNav } from \"@/components/ui/mobile/bottom-nav\"\nimport { MobileContainer } from \"@/components/ui/mobile/mobile-container\"\n\n/**\n * Demo showcasing the flexible slots system for complex layouts\n */\nexport default function SlotsLayoutDemo() {\n  const [showSearchBar, setShowSearchBar] = React.useState(false)\n  const [showFilters, setShowFilters] = React.useState(false)\n  const [showNotifications, setShowNotifications] = React.useState(false)\n\n  return (\n    <MobileContainer\n      header={\n        <div className=\"flex h-14 items-center justify-between border-b bg-background px-3\">\n          <div className=\"flex items-center gap-2\">\n            <Button variant=\"ghost\" size=\"icon\">\n              <Menu className=\"h-5 w-5\" />\n            </Button>\n            <h1 className=\"text-lg font-semibold\">Complex Layout</h1>\n          </div>\n          <div className=\"flex items-center gap-2\">\n            <Button \n              variant=\"ghost\" \n              size=\"icon\" \n              onClick={() => setShowSearchBar(!showSearchBar)}\n            >\n              <Search className=\"h-5 w-5\" />\n            </Button>\n            <Button \n              variant=\"ghost\" \n              size=\"icon\" \n              onClick={() => setShowNotifications(!showNotifications)}\n            >\n              <Bell className=\"h-5 w-5\" />\n            </Button>\n          </div>\n        </div>\n      }\n      bottomNav={\n        <BottomNav\n          items={[\n            {\n              href: \"#home\",\n              icon: Home,\n              label: \"Home\",\n              active: true,\n            },\n            {\n              href: \"#search\",\n              icon: Search,\n              label: \"Search\",\n            },\n            {\n              href: \"#browse\",\n              icon: LayoutGrid,\n              label: \"Browse\",\n            },\n            {\n              href: \"#settings\",\n              icon: Settings,\n              label: \"Settings\",\n            },\n            {\n              href: \"#profile\",\n              icon: User,\n              label: \"Profile\",\n            },\n          ]}\n        />\n      }\n      slots={{\n        belowHeader: (\n          <>\n            {showSearchBar && (\n              <div className=\"animate-in slide-in-from-top-2 border-b bg-background p-3 duration-200\">\n                <div className=\"flex items-center gap-2\">\n                  <Button \n                    variant=\"ghost\" \n                    size=\"icon\" \n                    onClick={() => setShowSearchBar(false)}\n                  >\n                    <ChevronLeft className=\"h-4 w-4\" />\n                  </Button>\n                  <Input \n                    placeholder=\"Search...\" \n                    className=\"h-9\"\n                    autoFocus \n                  />\n                </div>\n              </div>\n            )}\n            {showFilters && (\n              <div className=\"animate-in slide-in-from-top-2 border-b bg-muted/50 p-3 duration-200\">\n                <div className=\"flex flex-wrap items-center gap-2\">\n                  <span className=\"text-xs font-medium\">Filters:</span>\n                  <Button size=\"sm\" variant=\"secondary\" className=\"h-7 text-xs\">Recent</Button>\n                  <Button size=\"sm\" variant=\"outline\" className=\"h-7 text-xs\">Popular</Button>\n                  <Button size=\"sm\" variant=\"outline\" className=\"h-7 text-xs\">Featured</Button>\n                  <Button \n                    size=\"sm\" \n                    variant=\"ghost\" \n                    className=\"h-7 text-xs ml-auto\"\n                    onClick={() => setShowFilters(false)}\n                  >\n                    Clear\n                  </Button>\n                </div>\n              </div>\n            )}\n          </>\n        ),\n        aboveContent: (\n          <>\n            {showNotifications && (\n              <div className=\"animate-in fade-in slide-in-from-right-5 border-b bg-muted/30 p-3 duration-200\">\n                <div className=\"flex items-center justify-between\">\n                  <h3 className=\"font-medium\">Notifications</h3>\n                  <Button \n                    variant=\"ghost\" \n                    size=\"sm\"\n                    onClick={() => setShowNotifications(false)}\n                  >\n                    Close\n                  </Button>\n                </div>\n                <div className=\"mt-2 space-y-2\">\n                  <div className=\"rounded-md bg-background p-2 shadow-sm\">\n                    <p className=\"text-sm font-medium\">New feature available</p>\n                    <p className=\"text-xs text-muted-foreground\">Check out the new slots system for complex layouts</p>\n                  </div>\n                  <div className=\"rounded-md bg-background p-2 shadow-sm\">\n                    <p className=\"text-sm font-medium\">Your account was updated</p>\n                    <p className=\"text-xs text-muted-foreground\">Your profile settings have been saved</p>\n                  </div>\n                </div>\n              </div>\n            )}\n          </>\n        ),\n        aboveBottomNav: (\n          <div className=\"animate-in fade-in-0 border-t bg-background p-2 text-center\">\n            <p className=\"text-xs text-muted-foreground\">Custom section above bottom nav</p>\n          </div>\n        )\n      }}\n      rounded=\"md\"\n      padding=\"md\"\n    >\n      <div className=\"flex flex-col gap-6\">\n        <section>\n          <h2 className=\"mb-2 text-lg font-medium\">Flexible Layout Options</h2>\n          <p className=\"text-sm text-muted-foreground\">\n            This example demonstrates how to use the slots system to create complex layouts with components in specific positions.\n          </p>\n\n          <div className=\"mt-4 grid gap-2\">\n            <Button \n              onClick={() => setShowSearchBar(!showSearchBar)} \n              variant=\"outline\"\n            >\n              {showSearchBar ? \"Hide\" : \"Show\"} Search Bar (belowHeader slot)\n            </Button>\n            \n            <Button \n              onClick={() => setShowFilters(!showFilters)}\n              variant=\"outline\"\n            >\n              {showFilters ? \"Hide\" : \"Show\"} Filters (belowHeader slot)\n            </Button>\n            \n            <Button \n              onClick={() => setShowNotifications(!showNotifications)}\n              variant=\"outline\"\n            >\n              {showNotifications ? \"Hide\" : \"Show\"} Notifications (aboveContent slot)\n            </Button>\n          </div>\n        </section>\n\n        <section className=\"rounded-md bg-muted/50 p-4\">\n          <h3 className=\"font-medium\">Available Slots</h3>\n          <ul className=\"mt-2 space-y-1 text-sm\">\n            <li>• <code>aboveHeader</code>: Above the header component</li>\n            <li>• <code>belowHeader</code>: Below the header component</li>\n            <li>• <code>aboveContent</code>: Above the main content area</li>\n            <li>• <code>belowContent</code>: Below the main content area</li>\n            <li>• <code>aboveBottomNav</code>: Above the bottom navigation</li>\n            <li>• <code>belowBottomNav</code>: Below the bottom navigation</li>\n          </ul>\n        </section>\n      </div>\n    </MobileContainer>\n  )\n}\n",
      "type": "registry:block",
      "target": "components/blocks/slots-layout-demo.tsx"
    }
  ]
}
