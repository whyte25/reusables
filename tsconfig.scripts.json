{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "types": ["node"]
  },
  "include": ["scripts/**/*"],
  "exclude": ["node_modules"]
}
